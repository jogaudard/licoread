  author = {Spake, Rebecca and Bowler, Diana E. and Callaghan, Corey T. and Blowes, Shane A. and Doncaster, C. Patrick and Ant{\~a}o, Laura H. and Nakagawa, Shinichi and McElreath, Richard and Chase, Jonathan M.},
