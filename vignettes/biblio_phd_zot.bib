  author = {Bastviken, David and Wilk, Julie and Duc, Nguyen Thanh and G{\aa}lfalk, Magnus and Karlson, Martin and Neset, Tina-Simone and Opach, Tomasz and {Enrich-Prast}, Alex and Sundgren, Ingrid},
  year = {2022},
