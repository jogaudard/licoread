@article{bernerSummerWarmingExplains2020,
  title = {Summer Warming Explains Widespread but Not Uniform Greening in the {{Arctic}} Tundra Biome},
  author = {Berner, Logan T. and Massey, Richard and Jantz, Patrick and Forbes, Bruce C. and {Macias-Fauria}, Marc and {Myers-Smith}, Isla and Kumpula, Timo and Gauthier, Gilles and {Andreu-Hayles}, Laia and Gaglioti, Benjamin V. and Burns, Patrick and Zetterberg, Pentti and D'Arrigo, Rosanne and Goetz, Scott J.},
