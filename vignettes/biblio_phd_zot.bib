@article{yanChangingPlantSpecies2022,
  title = {Changing Plant Species Composition and Richness Benefit Soil Carbon Sequestration under Climate Warming},
  author = {Yan, Yingjie and Niu, Shuli and He, Yicheng and Wang, Song and Song, Lei and Peng, Jinlong and Chen, Xinli and Quan, Quan and Meng, Cheng and Zhou, Qingping and Wang, Jinsong},
