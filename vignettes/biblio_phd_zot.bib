@article{forbesFluxbotsMethodBuilding2023,
  title = {Fluxbots: {{A Method}} for {{Building}}, {{Deploying}}, {{Collecting}} and {{Analyzing Data From}} an {{Array}} of {{Inexpensive}}, {{Autonomous Soil Carbon Flux Chambers}}},
  shorttitle = {Fluxbots},
  author = {Forbes, Elizabeth and Benenati, Vincent and Frey, Spencer and Hirsch, Mare and Koech, George and Lewin, Grace and Mantas, John Naisikie and Caylor, Kelly},
