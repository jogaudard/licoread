@article{macias-fauriaPleistoceneArcticMegafaunal2020,
  title = {Pleistocene {{Arctic}} Megafaunal Ecological Engineering as a Natural Climate Solution?},
  author = {{Macias-Fauria}, Marc and Jepson, Paul and Zimov, Nikita and Malhi, Yadvinder},
  year = {2020},
