@article{delnevoPlasticGeneticResponses2018,
  title = {Plastic and Genetic Responses to Shifts in Snowmelt Time Affects the Reproductive Phenology and Growth of {{Ranunculus}} Acris},
  author = {Delnevo, Nicola and Petraglia, Alessandro and Carbognani, Michele and Vandvik, Vigdis and Halbritter, Aud H.},
