@article{topperDevilDetailNonadditive2018,
  title = {The Devil Is in the Detail: {{Nonadditive}} and Context-Dependent Plant Population Responses to Increasing Temperature and Precipitation},
  shorttitle = {The Devil Is in the Detail},
  author = {T{\"o}pper, Joachim P. and Meineri, Eric and Olsen, Siri L. and Rydgren, Knut and Skarpaas, Olav and Vandvik, Vigdis},
  year = {2018},
