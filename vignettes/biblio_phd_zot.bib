  author = {Knight, Christopher G. and Nicolitch, Oc{\'e}ane and Griffiths, Rob I. and Goodall, Tim and Jones, Briony and Weser, Carolin and Langridge, Holly and Davison, John and Dellavalle, Ariane and Eisenhauer, Nico and Gongalsky, Konstantin B. and Hector, Andrew and Jardine, Emma and Kardol, Paul and Maestre, Fernando T. and Sch{\"a}dler, Martin and Semchenko, Marina and Stevens, Carly and Tsiafouli, Maria {$A$} and Vilhelmsson, Oddur and Wanek, Wolfgang and {de Vries}, Franciska T.},
