@article{haslerAccountingAlbedoChange2024,
  title = {Accounting for Albedo Change to Identify Climate-Positive Tree Cover Restoration},
  author = {Hasler, Natalia and Williams, Christopher A. and Denney, Vanessa Carrasco and Ellis, Peter W. and Shrestha, Surendra and Terasaki Hart, Drew E. and Wolff, Nicholas H. and Yeo, Samantha and Crowther, Thomas W. and Werden, Leland K. and {Cook-Patton}, Susan C.},
